@page
@model Proiect_Cozma_Marian.Pages.Offers.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Offer.ID" />
            <div class="form-group">
                <label asp-for="Offer.Name" class="control-label"></label>
                <input asp-for="Offer.Name" class="form-control" />
                <span asp-validation-for="Offer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Description" class="control-label"></label>
                <input asp-for="Offer.Description" class="form-control" />
                <span asp-validation-for="Offer.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Price" class="control-label"></label>
                <input asp-for="Offer.Price" class="form-control" />
                <span asp-validation-for="Offer.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
